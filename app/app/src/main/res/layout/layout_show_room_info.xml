<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_kaibo_num_back"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:src="@mipmap/head"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_watch_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/show_play_small"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_favorite"
        android:layout_width="54dp"
        android:layout_height="23dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rect_solid_main_red"
        android:drawableLeft="@mipmap/show_favorite_small"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="8dp"
        android:text="关注"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:visibility="visible" />


</LinearLayout>